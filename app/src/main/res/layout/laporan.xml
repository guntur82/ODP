<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:theme="@style/AppTheme.NoActionBar"
    android:id="@+id/drawer">
    <include
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        layout="@layout/app_toolbar"/>
    
    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigationview"
        app:menu="@menu/nav_menu"
        app:headerLayout="@layout/nav_header"
        android:fitsSystemWindows="true"
        android:layout_gravity="start" />
    <View
        android:id="@+id/fabBGLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ln_fab3"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_234sdp"
        android:layout_marginTop="@dimen/_330sdp"
        android:visibility="gone"
        android:clipToPadding="false">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/_15sdp"
            app:srcCompat="@android:drawable/ic_btn_speak_now" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_fab2"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_marginLeft="@dimen/_235sdp"
        android:layout_marginTop="@dimen/_400sdp"
        android:visibility="gone"
        android:clipToPadding="false">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="58dp"
            android:layout_height="77dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/_15sdp"
            app:srcCompat="@android:drawable/ic_menu_camera" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_450sdp"
        android:layout_marginLeft="@dimen/_250sdp"
        android:visibility="gone"
        android:clipToPadding="false">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="58dp"
            android:layout_height="77dp"
            android:layout_gravity="bottom|end"
            app:srcCompat="@android:drawable/ic_dialog_map" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_500sdp"
        android:layout_marginLeft="@dimen/_250sdp"
       >
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:srcCompat="@android:drawable/ic_dialog_email" />
    </LinearLayout>
</RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>